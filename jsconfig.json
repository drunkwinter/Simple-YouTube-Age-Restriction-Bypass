{
  "compilerOptions": {
    "checkJs": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "strict": true,
    "noImplicitAny": false,

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
  ]
}
